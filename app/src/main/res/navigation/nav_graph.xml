<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/subjectsFragment">

    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.example.studyflow.ui.subjects.SubjectsFragment"
        android:label="Subjects"
        tools:layout="@layout/fragment_subjects">

        <action
            android:id="@+id/action_subjectsFragment_to_tasksFragment"
            app:destination="@id/tasksFragment"/>

        <action
            android:id="@+id/action_subjectsFragment_to_addSubjectFragment"
            app:destination="@id/addSubjectFragment" />

    </fragment>

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.studyflow.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">

        <argument
            android:name="subjectName"
            app:argType="string"/>

        <action
            android:id="@+id/action_tasksFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment"/>
    </fragment>

    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.studyflow.ui.tasks.AddTaskFragment"
        android:label="Add Task"
        tools:layout="@layout/fragment_add_task" >
    </fragment>

    <fragment
        android:id="@+id/addSubjectFragment"
        android:name="com.example.studyflow.ui.subjects.AddSubjectFragment"
        android:label="Add Subject"
        tools:layout="@layout/fragment_add_subject" />

</navigation>